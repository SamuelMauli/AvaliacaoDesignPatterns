<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" styleClass="root" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bank.gui.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Registrar Nova Conta" styleClass="title-label" />

    <VBox spacing="10.0" alignment="CENTER">
        <Label text="Nome de Usuário:" />
        <TextField fx:id="usernameField" promptText="Escolha um nome de usuário" maxWidth="300" />
    </VBox>

    <VBox spacing="10.0" alignment="CENTER">
        <Label text="Senha:" />
        <PasswordField fx:id="passwordField" promptText="Escolha uma senha" maxWidth="300" />
    </VBox>

    <VBox spacing="10.0" alignment="CENTER">
        <Label text="Nome Completo:" />
        <TextField fx:id="nameField" promptText="Seu nome completo" maxWidth="300" />
    </VBox>

    <VBox spacing="10.0" alignment="CENTER">
        <Label text="Email:" />
        <TextField fx:id="emailField" promptText="Seu endereço de email" maxWidth="300" />
    </VBox>

    <Label fx:id="messageLabel" textFill="red" />

    <HBox spacing="10.0" alignment="CENTER">
        <Button text="Registrar" onAction="handleRegisterButtonAction" styleClass="primary-button" />
        <Button text="Voltar ao Login" onAction="handleBackToLoginButtonAction" styleClass="secondary-button" />
    </HBox>
</VBox>

