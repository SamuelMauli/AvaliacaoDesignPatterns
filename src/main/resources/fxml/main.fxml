<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bank.gui.controller.MainController">
   <top>
      <!-- Barra Superior -->
      <VBox style="-fx-background-color: #1976d2; -fx-padding: 15;">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <VBox>
                     <children>
                        <Label fx:id="welcomeLabel" text="Bem-vindo ao Sistema Bancário!" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="userInfoLabel" text="Informações do usuário" textFill="#E3F2FD">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button onAction="#handleLogout" text="Sair" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 4;">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   
   <center>
      <TabPane tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <!-- Aba: Visão Geral das Contas -->
            <Tab text="Minhas Contas">
               <content>
                  <VBox spacing="20.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <Label text="Suas Contas Bancárias">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        
                        <TableView fx:id="accountsTable" prefHeight="300.0">
                           <columns>
                              <TableColumn fx:id="accountNumberColumn" prefWidth="200.0" text="Número da Conta" />
                              <TableColumn fx:id="accountTypeColumn" prefWidth="150.0" text="Tipo" />
                              <TableColumn fx:id="balanceColumn" prefWidth="150.0" text="Saldo" />
                           </columns>
                        </TableView>
                        
                        <HBox spacing="10.0">
                           <children>
                              <Button onAction="#handleCalculateInterest" text="Calcular Juros" style="-fx-background-color: #388e3c; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 4;">
                                 <font>
                                    <Font size="12.0" />
                                 </font>
                              </Button>
                              <Label text="(Disponível apenas para contas poupança)" textFill="#666666">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
            
            <!-- Aba: Operações Bancárias -->
            <Tab text="Operações">
               <content>
                  <VBox spacing="20.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <Label text="Operações Bancárias">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        
                        <GridPane hgap="15.0" vgap="15.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="Selecionar Conta:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="operationAccountCombo" maxWidth="1.7976931348623157E308" promptText="Escolha uma conta" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                              
                              <Label text="Valor:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="amountField" promptText="Digite o valor (ex: 100.50)" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              
                              <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                 <children>
                                    <Button onAction="#handleDeposit" text="Depositar" style="-fx-background-color: #388e3c; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 4;">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Button>
                                    <Button onAction="#handleWithdraw" text="Sacar" style="-fx-background-color: #f57c00; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 4;">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                        </GridPane>
                     </children>
                  </VBox>
               </content>
            </Tab>
            
            <!-- Aba: Criar Nova Conta -->
            <Tab text="Nova Conta">
               <content>
                  <VBox spacing="20.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <Label text="Criar Nova Conta">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        
                        <GridPane hgap="15.0" vgap="15.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <Label text="Nome do Titular:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="newAccountNameField" promptText="Digite o nome completo" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                              
                              <Label text="Tipo de Conta:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <ComboBox fx:id="accountTypeCombo" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              
                              <Label text="Saldo Inicial:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="initialBalanceField" promptText="Digite o saldo inicial (ex: 1000.00)" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              
                              <Label fx:id="parameterLabel" text="Parâmetro:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="parameterField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              
                              <Button onAction="#handleCreateAccount" text="Criar Conta" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-padding: 12 24; -fx-background-radius: 4;" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Button>
                           </children>
                        </GridPane>
                        
                        <VBox spacing="5.0" style="-fx-background-color: #f5f5f5; -fx-padding: 15; -fx-background-radius: 5;">
                           <children>
                              <Label text="Informações sobre os Parâmetros:">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <Label text="• Conta Corrente: Limite de cheque especial (ex: 500.00)">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Label>
                              <Label text="• Conta Poupança: Taxa de juros em decimal (ex: 0.05 para 5%)">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
            
            <!-- Aba: Histórico -->
            <Tab text="Histórico">
               <content>
                  <VBox spacing="20.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <Label text="Histórico de Transações">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        
                        <TextArea fx:id="transactionHistoryArea" editable="false" prefHeight="400.0" style="-fx-font-family: 'Courier New'; -fx-font-size: 12px;" />
                        
                        <Label text="Nota: Em um sistema real, este histórico seria mais detalhado e incluiria timestamps, tipos de transação, etc." textFill="#666666" wrapText="true">
                           <font>
                              <Font size="11.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>
