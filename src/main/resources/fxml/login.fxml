<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bank.gui.controller.LoginController">
   <center>
      <VBox fx:id="loginContainer" alignment="CENTER" maxHeight="400.0" maxWidth="400.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         <children>
            <!-- Título do Sistema -->
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Sistema Bancário" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                     <style>
                        -fx-text-fill: #1976d2;
                     </style>
                  </Label>
                  <Label text="Faça login para continuar" textAlignment="CENTER">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <style>
                        -fx-text-fill: #666666;
                     </style>
                  </Label>
               </children>
            </VBox>
            
            <!-- Campos de Login -->
            <VBox spacing="15.0">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Nome de Usuário:">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <TextField fx:id="usernameField" promptText="Digite seu nome de usuário" style="-fx-padding: 10; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
                  
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Senha:">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <PasswordField fx:id="passwordField" promptText="Digite sua senha" style="-fx-padding: 10; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </PasswordField>
                     </children>
                  </VBox>
               </children>
            </VBox>
            
            <!-- Botão de Login -->
            <Button fx:id="loginButton" maxWidth="1.7976931348623157E308" onAction="#handleLogin" text="Entrar" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-padding: 12; -fx-background-radius: 5; -fx-cursor: hand;">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            
            <!-- Mensagem de Status -->
            <Label fx:id="statusLabel" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            
            <!-- Link Esqueci Senha -->
            <Hyperlink onAction="#handleForgotPassword" text="Esqueci minha senha" style="-fx-text-fill: #1976d2;">
               <font>
                  <Font size="12.0" />
               </font>
            </Hyperlink>
            
            <!-- Informações de Demonstração -->
            <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #f5f5f5; -fx-background-radius: 5; -fx-padding: 15;">
               <children>
                  <Label text="Credenciais de Demonstração:" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="11.0" />
                     </font>
                     <style>
                        -fx-text-fill: #666666;
                     </style>
                  </Label>
                  <Label text="admin / admin123" textAlignment="CENTER">
                     <font>
                        <Font name="System Italic" size="10.0" />
                     </font>
                     <style>
                        -fx-text-fill: #888888;
                     </style>
                  </Label>
                  <Label text="alice / alice123" textAlignment="CENTER">
                     <font>
                        <Font name="System Italic" size="10.0" />
                     </font>
                     <style>
                        -fx-text-fill: #888888;
                     </style>
                  </Label>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
   <style>
      -fx-background-color: linear-gradient(to bottom, #e3f2fd, #bbdefb);
   </style>
</BorderPane>
